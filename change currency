var userCountry= prompt("Please enter your country name");
switch (userCountry){
	case japan:
		document.location.href = ../index-japan;
		break;
	case brazi:
		document.location.href = ../index-brazi;
		break;
	case iran:
		document.location.href = ../index-iran;
		break;
}
